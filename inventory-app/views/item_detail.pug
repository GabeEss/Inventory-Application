extends layout

block content
  h1 #{item.name}

  p #[strong Description:] #{item.description}
  p #[strong Price:] #{item.price}
  p #[strong In-Stock:] #{item.inStock}
   p #[strong Category:] 
    span
      a(href=item.category.url) #{item.category.name}

  p #[strong List of Suppliers:]
  dl
      each supplier in item.suppliers
        dt
          a(href=supplier.url) #{supplier.name}